<h1>A CRUD App using ASP.Net Core and ADO.Net</h1>
@{
    Layout = "_Layout";
    var title = "Employee List";
    ViewData["Title"] = title;
}

<h2>
    @title
</h2>

<h3><a asp-controller="Employees" asp-action="CreateEmployee" class="btn btn-dm btn-secondary"> Add Employee</a></h3>
<table class="table table-bordered table-sm table-striped">
    <thead>
        <tr><th>EmployeeId</th><th>Name</th><th>Address</th><th>Phone No@model.</th><th>Action</th></tr>
    </thead>
    <tbody>
        @if (Model == null)
        {
            <tr><td colspan="7" class="text-center">No Model Data</td></tr>
        }
        else
        {
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Name</td>
                    <td>@e.Address</td>
                    <td>@e.PhoneNo</td>
                    <td>
                        <a asp-controller="Employees" asp-action="EmployeeDetail" asp-route-id="@e.Id">Detail</a>
                        || <a asp-controller="Employees" asp-action="EditEmployee" asp-route-id="@e.Id">Edit</a>
                        || <a asp-controller="Employees" asp-action="DeleteEmployee" asp-route-id="@e.Id">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>